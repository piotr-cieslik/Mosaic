<Window x:Class="mosaic.ui.MosaicView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:mosaic.ui"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="mosaic"
        Width="525"
        Height="350"
        mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="100" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />

            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />

            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />

            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <Label Grid.Row="0"
               Grid.Column="0"
               Content="Na jakim obrazie mam bazwoać?" />
        <TextBox Grid.Row="1"
                 Grid.Column="0"
                 IsReadOnly="True"
                 Text="{Binding BaseImagePath}" />
        <Button Grid.Row="1"
                Grid.Column="1"
                Command="{Binding ChooseBaseImageCommand}"
                Content="Wybierz" />

        <Label Grid.Row="2"
               Grid.Column="0"
               Content="Gdzie mam szukać obrazów?" />
        <ListView Grid.Row="3"
                  Grid.Column="0"
                  Height="100"
                  ItemsSource="{Binding SourceDirectoryPaths}"
                  SelectedItem="{Binding SelectedSourceDirectoryPath,
                                         Mode=OneWayToSource}" />
        <StackPanel Grid.Row="3" Grid.Column="1">
            <Button Command="{Binding AddSourceDirectoryCommand}" Content="Dodaj folder" />
            <Button Command="{Binding RemoveSourceDirectoryCommand}" Content="Usuń folder" />
        </StackPanel>

        <Label Grid.Row="4"
               Grid.Column="0"
               Content="Gdzie mam zapisać wygenerowany obraz?" />
        <TextBox Grid.Row="5"
                 Grid.Column="0"
                 IsReadOnly="True"
                 Text="{Binding OutputDirectoryPath}" />
        <Button Grid.Row="5"
                Grid.Column="1"
                Command="{Binding ChooseOutputDirectoryCommand}"
                Content="Wybierz" />

        <Button Grid.Row="6"
                Grid.Column="0"
                Command="{Binding GenerateCommand}"
                Content="Generuj" />
    </Grid>
</Window>